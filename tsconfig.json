{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "isomorphic-fetch",
      "node"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true
  },
  "include": [
    "server/**/*",
    "lib/**/*"
  ]
}